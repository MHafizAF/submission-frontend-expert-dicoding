{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-alert": "off",
        "no-underscore-dangle": "off",
        "no-restricted-globals": "off",
        "no-plusplus": "off",
        "no-undef": "off",
    }
}
